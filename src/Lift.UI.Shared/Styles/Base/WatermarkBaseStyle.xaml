<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:liftui="clr-namespace:Lift.UI.Controls">

    <Style x:Key="WatermarkBaseStyle" TargetType="liftui:Watermark">
        <Setter Property="MarkBrush" Value="{DynamicResource DarkMaskBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource DarkMaskBrush}"/>
        <Setter Property="Angle" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="liftui:Watermark">
                    <Border Name="PART_Root">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
