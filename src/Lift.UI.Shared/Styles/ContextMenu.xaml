<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style BasedOn="{StaticResource ContextMenuBaseStyle}" TargetType="ContextMenu" />

    <Style x:Key="ContextMenu.Small"
           BasedOn="{StaticResource ContextMenuBaseStyle}"
           TargetType="ContextMenu">
        <Setter Property="liftui:MenuAttach.ItemPadding" Value="6,0" />
        <Setter Property="liftui:MenuAttach.PopupVerticalOffset" Value="-3" />
        <Setter Property="liftui:MenuAttach.PopupHorizontalOffset" Value="6" />
    </Style>

</ResourceDictionary>
