<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:liftui="clr-namespace:Lift.UI.Controls">

    <Style BasedOn="{StaticResource DatePickerBaseStylePersian}" TargetType="liftui:PersianDatePicker"/>

    <Style x:Key="DatePickerPersian.Small" BasedOn="{StaticResource DatePickerBaseStylePersian}" TargetType="liftui:PersianDatePicker">
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="Padding" Value="6,0"/>
    </Style>

    <Style x:Key="DatePickerExtendPersian" BasedOn="{StaticResource DatePickerExtendBaseStylePersian}" TargetType="liftui:PersianDatePicker"/>

    <Style x:Key="DatePickerExtendPersian.Small" BasedOn="{StaticResource DatePickerExtendPersian}" TargetType="liftui:PersianDatePicker">
        <Setter Property="liftui:InfoElement.MinContentHeight" Value="20"/>
        <Setter Property="liftui:InfoElement.ContentHeight" Value="20"/>
        <Setter Property="liftui:TitleElement.MarginOnTheLeft" Value="0,3,6,0"/>
        <Setter Property="liftui:TitleElement.MarginOnTheTop" Value="6,0,0,1" />
        <Setter Property="Padding" Value="6,0"/>
        <Setter Property="MinHeight" Value="20" />
    </Style>
</ResourceDictionary>
